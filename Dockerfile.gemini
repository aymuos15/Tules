FROM ubuntu:22.04

# Install dependencies (including Node.js for Gemini CLI which is npm-based)
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    git \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Create directories that will be mounted
# This is needed to avoid permission issues
RUN mkdir -p /workspace /root/.gemini

# Make /root accessible to all users (for when running as non-root)
RUN chmod -R 777 /root

WORKDIR /workspace

# Default command
CMD ["/bin/bash"]
