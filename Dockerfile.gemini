FROM ubuntu:22.04

# Install dependencies (including Node.js for Gemini CLI which is npm-based)
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    git \
    gosu \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Copy and set up entrypoint script
# This creates the user dynamically to fix Node.js os.userInfo() errors
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Create directories that will be mounted
RUN mkdir -p /workspace

WORKDIR /workspace

# Set entrypoint to handle user creation
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Default command
CMD ["/bin/bash"]
